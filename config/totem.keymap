        extend {
            bindings = <
       &kp ESCAPE    &none         &none           &none             &none    &kp PAGE_UP        &kp HOME       &kp UP_ARROW  &kp END      &kp CAPSLOCK
       &sk LEFT_ALT  &sk LEFT_GUI  &sk LEFT_SHIFT  &sk LEFT_CONTROL  &none    &kp PAGE_DOWN      &kp LEFT       &kp DOWN      &kp RIGHT    &kp DELETE
